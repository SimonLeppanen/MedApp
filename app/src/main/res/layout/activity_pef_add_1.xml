<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="35dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="@dimen/pef_viewsize"
                android:layout_height="@dimen/pef_viewsize"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/pef_margin">
                <ImageView
                    android:id="@+id/check_1"
                    android:layout_width="@dimen/pef_viewsize"
                    android:layout_height="@dimen/pef_viewsize"
                    android:padding="2dp"
                    android:src="@mipmap/ic_check_circle_black_18dp"
                    android:gravity="center_vertical"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/nbr_1"
                    android:layout_width="@dimen/pef_viewsize"
                    android:layout_height="@dimen/pef_viewsize"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/pef_procedure_text_size"
                    android:textStyle="bold"
                    android:text="1."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/pef_viewsize"
                android:layout_height="@dimen/pef_viewsize"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/pef_margin">

                <ImageView
                    android:id="@+id/check_2"
                    android:layout_width="@dimen/pef_viewsize"
                    android:layout_height="@dimen/pef_viewsize"
                    android:padding="2dp"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/ic_check_circle_black_18dp"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/nbr_2"
                    android:layout_width="@dimen/pef_viewsize"
                    android:layout_height="@dimen/pef_viewsize"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/pef_procedure_text_size"
                    android:textStyle="bold"
                    android:text="2."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/pef_viewsize"
                android:layout_height="@dimen/pef_viewsize"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/pef_margin">
                <ImageView
                    android:id="@+id/check_3"
                    android:layout_width="@dimen/pef_viewsize"
                    android:layout_height="@dimen/pef_viewsize"
                    android:padding="2dp"
                    android:src="@mipmap/ic_check_circle_black_18dp"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/nbr_3"
                    android:layout_width="@dimen/pef_viewsize"
                    android:layout_height="@dimen/pef_viewsize"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/pef_procedure_text_size"
                    android:textStyle="bold"
                    android:text="3."/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:textSize="@dimen/pef_procedure_text_size"
                android:textStyle="bold"
                android:text="Please connect device"/>
            <TextView
                android:id="@+id/text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:textSize="@dimen/pef_procedure_text_size"
                android:textStyle="bold"
                android:text="Take measurement three times"/>
            <TextView
                android:id="@+id/text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/pef_procedure_text_size"
                android:textStyle="bold"
                android:text="Press next!"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/measurement_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="490"
                android:textStyle="bold"
                android:textSize="36sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <View
                    android:id="@+id/pef_line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:rotation="90"
                    android:background="@color/default_gray"/>
            </LinearLayout>
            <TextView
                android:id="@+id/measurement_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="490"
                android:textStyle="bold"
                android:textSize="36sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <View
                    android:id="@+id/pef_line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:rotation="90"
                    android:background="@color/default_gray"/>
            </LinearLayout>
            <TextView
                android:id="@+id/measurement_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="490"
                android:textStyle="bold"
                android:textSize="36sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:backgroundTint="@color/addbuttonbackground"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="NEXT"
            android:clickable="true"
            android:onClick="nextClick"/>
    </LinearLayout>

</LinearLayout>